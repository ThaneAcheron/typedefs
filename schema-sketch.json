{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bit",
  "type": "object",

  "required": [
    "value",
    "vars"
  ],
  "properties": {
    "value": {
      "$ref": "#/definitions/twobits" //schema for the top level type
    },
    "vars": {
      "type": "array",
      "items": {
        "type": "boolean"
      },
      "minItems": 2,
      "maxItems": 2
    }
  },


  "definitions": {
    //unit type
    "unit": {
      "enum": [
        "unit"
      ]
    },

    //void type
    "void": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/unit"
      },
      "minItems": 2,
      "uniqueItems": true
    },

    //example of sum type
    "bit": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tag": {
              "enum": [
                "left"
              ]
            },
            "value": {
              "$ref": "#/definitions/unit"
            }
          },
          "required": [
            "tag",
            "value"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "tag": {
              "enum": [
                "right"
              ]
            },
            "value": {
              "$ref": "#/definitions/unit"
            }
          },
          "required": [
            "tag",
            "value"
          ],
          "additionalProperties": false
        }
      ]
    },

    //example of product type
    "twobits": {
      "type": "object",
        "required": ["product"],
        "additionalProperties": false,
        "properties": {
          "product": {
              "$ref": "#/definitions/innerprod"
            }
        }
    },
    "innerprod": {
      "type": "object",
      "properties": {
        "factors": {
           "type": "integer",
           "minimum": 2
        },
        "fst": {
          "$ref": "#/definitions/bit"
        },
        "snd": {
          "$ref": "#/definitions/bit"
        }
      },
      "required": [
        "fst",
        "snd","factors"
      ]
    }
  }
}